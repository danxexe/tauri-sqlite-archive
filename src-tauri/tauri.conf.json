{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "tauri-sqlite-archive",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "tauri-sqlite-archive",
        "width": 800,
        "height": 600,
        "visible": false,
        "url": "sqlar://localhost/index.html"
      }
    ],
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [{
        "domain": "sqlar.localhost",
        "windows": ["main"],
        "enableTauriAPI": true
      }]
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.danxexe.tauri-sqlite-archive",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
